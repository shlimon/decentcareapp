{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@api/*": ["api/*"],
      "@widgets/*": ["widgets/*"],
      "@pages/*": ["pages/*"],
      "@context/*": ["context/*"],
      "@routes/*": ["routes/*"],
      "@auth/*": ["auth/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react"
  },
  "include": ["src"]
}
